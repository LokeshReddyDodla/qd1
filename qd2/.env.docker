# Production Environment Template
# Copy this to .env and fill in your actual values

# OpenAI API Key (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Qdrant Configuration (will be overridden by docker-compose)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=people_data
QDRANT_VECTOR_SIZE=1536

# OpenAI Models
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_LLM_MODEL=gpt-4o-mini
OPENAI_LLM_TEMPERATURE=0.1
OPENAI_LLM_MAX_TOKENS=1000

# PostgreSQL (optional - for name resolution)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=patient_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# MongoDB
MONGO_URI=mongodb://localhost:27017
MONGO_DB=patient_data

# Application
LOG_LEVEL=INFO
ENVIRONMENT=production
EMBEDDING_BATCH_SIZE=32
INGEST_BATCH_SIZE=100
DEFAULT_TOP_K=10
MAX_TOP_K=50
